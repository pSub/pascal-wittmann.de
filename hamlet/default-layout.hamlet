         $forall link <- categories
            <a :isCurrent (snd link):id=active href="@{snd link}">#{fst link}
     <div #content
          ^{widget}
     <div #footer
          <div #left
               $maybe _ <- mu
                   <a href="@{AdminR}">Admin
                   \ | #
