#tags
    margin-left: 50%
    margin-top: 0em
    padding-left: 0em
    padding-top: 0.2em
    font-size: 0.9em
    list-style: none

#tags li 
    display: inline
    padding-right: 0.3em

#tags a:link, #categories a:visited, #categories a:active 
    color: #000

#tags a:hover
    text-decoration: underline

.article .text .edit
    font-size: 0.8em
    float: right
    
.article .text .date
    font-size: 0.8em
    color: #808080
    
.article .info
    font-size: 0.8em

